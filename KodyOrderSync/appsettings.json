{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "KodyOrderSync": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kodyordersync-.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 10
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "KodyOrderSync": "Debug"
    }
  },
  "OrderSyncSettings": {
    "KodyOrderApiBaseUrl": "https://grpc-staging.kodypay.com",
    "KodyOrderApiKey": "your api key here only for test",
    "KodyStoreId": "your store id",
    "PosDbConnectionString": "Server=localhost;Port=53306;Database=gicater;User=user;Password=password;",
    "StateDbPath" : "state.db",
    "OrderPollingIntervalSeconds": 5, 
    "StatusPollingIntervalSeconds" : 5,
    "HoursToLookBackForStatus" : 24,
    "StateDbRetentionDays" : 15,
    "StateDbMaintenanceIntervalHours" : 24
  }
}